{
  "name": "reactide",
  "version": "0.0.1",
  "main": "dist/js/main/index.js",
  "repository": "https://github.com/reactide-community/reactide.git",
  "author": "Simon Hochrein <simon@ministrycrm.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn run dev-less\" \"yarn run dev-ts\"",
    "dev-less": "watch \"lessc src/less/index.less dist/css/index.css\" src/less",
    "dev-ts": "tsc -w",
    "build": "yarn run build-less && yarn run build-ts",
    "build-less": "lessc src/less/index.less dist/css/index.css",
    "build-ts": "tsc",
    "pkg": "electron-builder",
    "dist": "yarn run build && yarn run pkg",
    "start": "electron ."
  },
  "dependencies": {
    "codemirror": "^5.33.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.77.2",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "concurrently": "^3.5.1",
    "electron": "^1.7.10",
    "electron-builder": "^19.54.0",
    "husky": "^0.14.3",
    "less": "^2.7.3",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.2.3",
    "watch": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "build": {
    "appId": "org.reactide-comunity.reactide",
    "directories": {
      "output": "build"
    }
  }
}
